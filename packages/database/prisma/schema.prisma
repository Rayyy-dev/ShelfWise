generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  passwordHash      String
  name              String
  role              String    @default("LIBRARIAN") // ADMIN, LIBRARIAN
  isVerified        Boolean   @default(false)
  verificationCode  String?
  verificationExp   DateTime?
  verificationTries Int       @default(0)
  resetToken        String?
  resetTokenExp     DateTime?
  books             Book[]
  members           Member[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model Book {
  id            String     @id @default(cuid())
  isbn          String?
  title         String
  author        String
  category      String
  description   String?
  publishedYear Int?
  coverImage    String?
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  copies        BookCopy[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([isbn, userId])
  @@index([userId])
  @@index([category])
  @@index([author])
}

model BookCopy {
  id            String      @id @default(cuid())
  book          Book        @relation(fields: [bookId], references: [id], onDelete: Cascade)
  bookId        String
  barcode       String      @unique
  status        String      @default("AVAILABLE") // AVAILABLE, BORROWED, MAINTENANCE, LOST
  condition     String      @default("GOOD") // NEW, GOOD, FAIR, POOR
  shelfLocation String?
  borrowings    Borrowing[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([status])
}

model Member {
  id           String      @id @default(cuid())
  memberNumber String      // LIB-001, LIB-002...
  firstName    String
  lastName     String
  email        String
  phone        String?
  address      String?
  status       String      @default("ACTIVE") // ACTIVE, SUSPENDED, EXPIRED
  maxBooks     Int         @default(5)
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  borrowings   Borrowing[]
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@unique([memberNumber, userId])
  @@unique([email, userId])
  @@index([userId])
  @@index([status])
}

model Borrowing {
  id         String    @id @default(cuid())
  member     Member    @relation(fields: [memberId], references: [id])
  memberId   String
  bookCopy   BookCopy  @relation(fields: [bookCopyId], references: [id])
  bookCopyId String
  borrowDate DateTime  @default(now())
  dueDate    DateTime
  returnDate DateTime?
  status     String    @default("ACTIVE") // ACTIVE, RETURNED, OVERDUE
  fines      Fine[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([status])
  @@index([dueDate])
}

model Fine {
  id          String    @id @default(cuid())
  borrowing   Borrowing @relation(fields: [borrowingId], references: [id])
  borrowingId String
  amount      Float
  reason      String    // OVERDUE, DAMAGE, LOST
  status      String    @default("PENDING") // PENDING, PAID, WAIVED
  paidAt      DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([status])
}
